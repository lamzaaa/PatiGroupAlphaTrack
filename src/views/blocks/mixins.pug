mixin swiper({column,swiperClass,autoPlay=false,navigation=true,pagination=false,scrollbar=false,allowTouchMove=true,arrowClass,slidesLength=12,swiperWrapperClass,autoAlign=false})
	-var column = column || 3;
	div(class=`swiper-column-auto relative ${column ? `auto-${column}-column` : ''} ${swiperClass} ${autoPlay ? 'auto-play' : ''} ${allowTouchMove ? 'allow-touchMove' : ''}`)
		.swiper(class=swiperWrapperClass)
			.swiper-wrapper
				-for(t=0;t<slidesLength;t++)
					.swiper-slide(class=`${t===3 ? 'current-menu-item' : ''}`)
						block
		- if(navigation)
			.arrow-button(class=arrowClass)
				.button-prev
				.button-next

		- if(pagination)
			.swiper-pagination
		- if(scrollbar)
			.swiper-scrollbar

