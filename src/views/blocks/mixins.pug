mixin img({src,className,classNameImg,href,lazy=true})
	-var src = src || 'https://picsum.photos/1600/900';
	- var tag = href ? 'a' : 'span';
	#{tag}(class=className,href=href)
		if(src)
			if(lazy)
				img.lozad(data-src=src class=classNameImg)
			else
				img(src=src class=classNameImg)
mixin normal-img(url="https://picsum.photos/1600/900",className,classNameImg,href)
	if(!url)
		- url = 'https://picsum.photos/1600/900';
	a(class=className,href=href)
		img(src=url class=classNameImg)
mixin span-img({src="https://picsum.photos/1600/900",className,classNameImg})
	if(!src)
		- src = 'https://picsum.photos/1600/900';
	span(class=className)
		img.lozad(data-src=src class=classNameImg)

mixin only-img({src="https://picsum.photos/1600/900",className,lazy=true})
	if(!src)
		- src = 'https://picsum.photos/1600/900';
	if(lazy)
		img.lozad(data-src=src class=className)
	else
		img(src=src class=className)
mixin btn-primary({title,className="",iconString='<i class="fa-regular fa-arrow-right"></i>',iconPosition='left'})
	- className += ' btn-primary '
	- className = className
	- title = title || 'Xem thêm'
	a.btn(class=className)
		if(iconPosition === 'left')
			!=unescape(iconString)
			!=unescape(title)
		else
			!=unescape(title)
			if(iconString)
				!=unescape(iconString)
