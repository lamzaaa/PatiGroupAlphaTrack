	.swiper
		.swiper-wrapper
			-for(i=0;i<banners.length;i++)
				-const currentIndex = i+1;
				.swiper-slide(data-banner-type=`${i % 2 + 1}` data-banner-color=`${banners[i].color}`)
					.ratio-wrapper(class="ratio-[960/1920]")
						.main-img
							+img({src:`${banners[i].mainImg}`,className:'ratio-[1/1] ratio-contain'})
						-if(banners[i].props)
							-for(prop=0;prop<banners[i].props.length;prop++)
